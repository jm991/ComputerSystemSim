<UserControl
    x:Class="ComputerSystemSim.JobViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ComputerSystemSim"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
		<StackPanel Margin="0,0,0,0" Orientation="Horizontal">
			<Image Margin="0,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="70" Source="{Binding CreatorImageURI}"/>
			<StackPanel Margin="0,0,0,5" Orientation="Vertical">
				<TextBlock Text="Current Job"/>
				<TextBlock Text="{Binding JobTitle}"/>
				<TextBlock Text="{Binding ArrivalTime}"/>
			</StackPanel>
		</StackPanel>
    </Grid>
</UserControl>
