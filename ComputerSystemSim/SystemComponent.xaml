<UserControl
    x:Class="ComputerSystemSim.SystemComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ComputerSystemSim"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
	<UserControl.Resources>
		<DataTemplate x:Key="EventsTemplate">
			<Grid>
				<TextBlock Text="{Binding ArrivalTime}"/>
			</Grid>
		</DataTemplate>
	</UserControl.Resources>
    
    <Grid>
    	<Grid>
    		<StackPanel VerticalAlignment="Top">
    			<TextBlock x:Name="NameBox" TextWrapping="Wrap" Text="Hello"/>
    			<TextBlock x:Name="CooldownTicksBox" TextWrapping="Wrap" Text="{Binding CurEventCooldown}"/>
    			<Grid>
    				<TextBlock x:Name="ProcessBlock" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center">
    					<Run Text="Process "/>
    					<Run Text="exp: "/>
    				</TextBlock>
    				<TextBox x:Name="ProcessBox" TextWrapping="Wrap" Text="Enter processing exponential mean here" Margin="79,0,0,0"/>
    			</Grid>
    		</StackPanel>
    		<ScrollViewer Margin="0,65,0,0">
    			<ListBox x:Name="EventsListBox" Margin="0" ItemTemplate="{StaticResource EventsTemplate}"/>
    		</ScrollViewer>
    	</Grid>

    </Grid>
</UserControl>
