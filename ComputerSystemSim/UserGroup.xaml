<UserControl
    x:Class="ComputerSystemSim.UserGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ComputerSystemSim"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        
    	<StackPanel VerticalAlignment="Top">
    		<TextBlock x:Name="NameBox" TextWrapping="Wrap" Text="User Control Name"/>
    		<Grid>
    			<TextBlock x:Name="CooldownTicksBox_Copy" TextWrapping="Wrap" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Ticks till cooldown: "/>
                <TextBlock x:Name="CooldownTicksBox" TextWrapping="Wrap" Text="{Binding Path=CurEventCooldown}" Margin="120,0,0,0" FontWeight="Bold" FontSize="16"/>
    		</Grid>
    		<Grid>
    			<TextBlock x:Name="InterarrivalBlock" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Interarrival exp: "/>
    			<TextBlock x:Name="InterarrivalBox" TextWrapping="Wrap" Text="0" Margin="79,0,0,0" FontWeight="Bold" FontSize="16"/>
    		</Grid>
    	</StackPanel>

    </Grid>
</UserControl>
